<div class="container p-4">
    <div class="row">
        {{#each contacts}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    {{!-- <a href="{{url}}" target="_blank"> --}}
                        <h3 class="card-title text-uppercase">
                            {{fullname}}
                        </h3><i class="far fa-address-book"></i>
                    </a>
                        
                    <p class="m-2">{{number}}</p>
                    <p class="text-muted">
                        {{timeago created_at}}
                    </p>
                    <a class="btn btn-danger" href="/contacts/delete/{{id}}">
                        Delete contacto
                    </a>
                    <a class="btn btn-secondary" href="/contacts/edit/{{id}}">
                        Edit
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There are not contactos saved yet.</p>
                <a href="/contacts/add">Create One!</a>
            </div>
        </div>
        {{/each}}
    </div>
  <div class="col-md-4 mx-auto"><br>
            <div class="card card-body text-center">
                
                {{!-- <p>Cre.</p> --}}
                <a href="/contacts/add">Crear un contacto nuevo!</a>
            </div>
        </div>
 
    </div>

</div>