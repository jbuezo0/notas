<div class="container p-4">
    <div class="row">
        {{#each notes}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{title}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{title}}
                        </h3>
                    </a>
                    <p class="m-2">{{description}}</p>
                    <p class="text-muted">
                        {{timeago created_at}}
                    </p>
                    <a class="btn btn-danger" href="/notes/delete/{{id}}">
                        Delete Link
                    </a>
                    <a class="btn btn-secondary" href="/notes/edit/{{id}}">
                        Edit
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There are not Links saved yet.</p>
                <a href="/notes/list1">Create One!</a>
            </div>
        </div>
        {{/each}}
    </div>

    <div class="col-md-4 mx-auto"><br>
            <div class="card card-body text-center">
                
                {{!-- <p>Cre.</p> --}}
                <a href="/notes/list1">Crear una nota!</a>
            </div>
    </div>
</div>