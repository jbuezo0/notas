

<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/notes/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Description"></textarea>
                        </div>
                        
       

                         <div class="select is-primary is-rounded is-medium">
            <select name="contact_id">
                 {{#each contacts}}
              <option value="{{id}}"> {{fullname}} </option>
        
              {{/each}}

            </select>
</div>

       <div class="select is-primary is-rounded is-medium">
                         

            <select name="link_id">
                {{#each links}}
              <option value="{{id}}"> {{title}} </option>
        
              {{/each}}
            </select>
</div>

                        
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                   
        </div>
        </div>
        </div>
        </div>
 




